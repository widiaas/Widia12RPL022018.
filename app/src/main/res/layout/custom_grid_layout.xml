<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="@dimen/_200sdp">

    <androidx.cardview.widget.CardView
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_gravity="center_horizontal"
            android:layout_width="@dimen/_130sdp"
            android:layout_height="@dimen/_160sdp"
            app:cardCornerRadius="@dimen/_8ssp"
            app:cardElevation="@dimen/_2ssp"
            tools:ignore="MissingConstraints">
       <RelativeLayout
               android:layout_height="match_parent" android:layout_width="match_parent">
        <ImageView
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_18ssp"
                android:id="@+id/imgvw"
                tools:srcCompat="@drawable/sepedawidia"
                android:layout_width="@dimen/_120sdp"
                android:layout_height="@dimen/_80sdp"/>
        <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:id="@+id/txtvw"
                android:layout_below="@+id/imgvw"
                android:text="Tesst"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="#9997dd"
                android:textSize="@dimen/_11ssp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

           <RelativeLayout
                   android:layout_marginTop="@dimen/_10sdp"
                   android:layout_below="@id/txtvw"
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_20sdp">
           <TextView
                   android:id="@+id/pricee"
                   android:text="Rp 8000"
                   android:layout_marginLeft="@dimen/_10sdp"
                   android:textColor="#9997dd"
                   android:textSize="@dimen/_8ssp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           <Button
                   android:layout_marginRight="@dimen/_10sdp"
                   android:layout_alignParentRight="true"
                   android:text="Sewa"
                   android:textSize="@dimen/_8sdp"
                   android:textColor="#fff"
                   android:background="@color/purple"
                   android:layout_width="@dimen/_50ssp"
                   android:layout_height="@dimen/_25ssp"/>
           </RelativeLayout>

       </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>