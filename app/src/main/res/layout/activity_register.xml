<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/ungu1"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:gravity="center_horizontal"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="𝑹𝒆𝒈𝒊𝒔𝒕𝒆𝒓"
            android:textColor="#ffff"
            android:layout_gravity="center"
            android:textSize="50dp"/>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView

                    android:text="Email"
                    android:textColor="#fff"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                   android:id="@+id/regEmail"
                    android:background="#ffff"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_35sdp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView

                    android:text="Password"
                    android:textColor="#fff"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/regPassword"
                    android:textColor="#fff"
                    android:background="#fff"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_35sdp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView

                    android:text="Nama"
                    android:textColor="#fff"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/regNama"
                    android:inputType="textPassword"
                    android:textColor="#9997dd"
                    android:background="#fff"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_35sdp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView

                    android:text="Nomor Handphone"
                    android:textColor="#fff"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/regHp"
                    android:background="#fff"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_35sdp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView

                    android:text="Alamat"
                    android:textColor="#fff"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/regAlamat"
                    android:textColor="#9997dd"
                    android:background="#fff"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_35sdp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
            <TextView

                    android:text="No Ktp"
                    android:textColor="#fff"
                    android:paddingBottom="@dimen/_5sdp"
                    android:textSize="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/regKtp"
                    android:inputType="textPassword"
                    android:textColor="#fff"
                    android:background="#fff"
                    android:layout_width="@dimen/_220sdp"
                    android:layout_height="@dimen/_35sdp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_width="@dimen/_220sdp"
                android:layout_marginTop="@dimen/_10sdp"

                android:layout_height="wrap_content">

            <Button
                    android:id="@+id/btnRegister"
                    android:shadowColor="@null"
                    android:background="#fff"
                    android:layout_width="@dimen/_55sdp"
                    android:text="Register"
                    android:textStyle="bold"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="#000000"
                    android:layout_height="@dimen/_25sdp"/>
            <TextView
                    android:id="@+id/orLogin"
                    android:onClick="orLogin"
                    android:textColor="#fff"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:text="Sudah Punya akun?"
                    android:textSize="@dimen/_8sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>